<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsb.dao.CountryDao">

    <resultMap id="BaseResultMap" type="com.tsb.entity.Country">
        <!--@Table country-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="countryname" column="countryname" jdbcType="VARCHAR"/>
        <result property="countrycode" column="countrycode" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, countryname, countrycode
        from mybatis.country
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, countryname, countrycode
        from mybatis.country
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, countryname, countrycode
        from mybatis.country
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="countryname != null and countryname != ''">
                and countryname = #{countryname}
            </if>
            <if test="countrycode != null and countrycode != ''">
                and countrycode = #{countrycode}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mybatis.country(countryname, countrycode)
        values (#{countryname}, #{countrycode})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mybatis.country
        <set>
            <if test="countryname != null and countryname != ''">
                countryname = #{countryname},
            </if>
            <if test="countrycode != null and countrycode != ''">
                countrycode = #{countrycode},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mybatis.country where id = #{id}
    </delete>

</mapper>